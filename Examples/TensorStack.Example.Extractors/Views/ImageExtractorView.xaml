<Views:ViewBase x:Class="TensorStack.Example.Views.ImageExtractorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TensorStack.Example.Views"
    xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls;assembly=TensorStack.WPF"
    xmlns:Views="clr-namespace:TensorStack.Example.Views">
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ImageExtractorView}}}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>


            <!--***Left Panel***-->
            <Grid Grid.Column="0">
                <Border Margin="4">
                    <DockPanel x:Name="LeftPanelContainer" Margin="4">

                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding ExtractorService.IsLoading, Converter={StaticResource InverseBoolConverter}}">

                            <!--Device Selector-->
                            <StackPanel IsEnabled="{Binding ExtractorService.IsLoaded, Converter={StaticResource InverseBoolConverter}}">
                                <TextBlock Text="Device" Style="{StaticResource FieldTextBlockStyle}" />
                                <ComboBox ItemsSource="{Binding Settings.Devices}" SelectedItem="{Binding SelectedDevice}" DisplayMemberPath="Name"/>
                            </StackPanel>

                            <!--Model Selector-->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" IsEnabled="{Binding ExtractorService.IsLoaded, Converter={StaticResource InverseBoolConverter}}">
                                    <TextBlock Text="Models" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox SelectedItem="{Binding SelectedModel, Mode=TwoWay}"  ItemsSource="{Binding Settings.ExtractorModels}" DisplayMemberPath="Name" />
                                </StackPanel>
                                <Grid Grid.Column="1" Height="22" Margin="0,18,0,0" >
                                    <Button x:Name="ButtonLoad" Content="Load" Command="{Binding LoadCommand}" />
                                    <Button x:Name="ButtonUnload" Content="Unload" Command="{Binding UnloadCommand}" Visibility="{Binding ExtractorService.IsLoaded, Converter={StaticResource BooleanToHiddenConverter}}" />
                                </Grid>
                            </Grid>

                        </StackPanel>

                        <!--Execute/Cancel-->
                        <UniformGrid DockPanel.Dock="Bottom" Columns="2" Height="30">
                            <Button Content="Cancel" Command="{Binding CancelCommand}" />
                            <Button Content="Extract" Command="{Binding ExecuteCommand}" />
                        </UniformGrid>


                        <StackPanel>

                            <!--Input Image-->
                            <Border Margin="0,15,0,15"
                                VerticalAlignment="Top"
                                Style="{StaticResource ImageDropZoneStyle}"
                                Width="{Binding ActualWidth,ElementName=LeftPanelContainer}"
                                Height="{Binding ActualWidth,ElementName=LeftPanelContainer}"
                                MaxHeight="{Binding ActualWidth,ElementName=LeftPanelContainer}">
                                <CommonControls:ImageElement
                                    Source="{Binding SourceImage, Mode=TwoWay}"
                                    IsLoadEnabled="True"
                                    IsLoadOverlayEnabled="False" 
                                    IsSaveEnabled="False" />
                            </Border>


                            <!--Options-->
                            <UniformGrid Columns="3">
                                <StackPanel>
                                    <TextBlock Text="Tile Mode" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox SelectedItem="{Binding TileMode}" ItemsSource="{Binding Source={StaticResource TileMode}}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Tile Size" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding TileSize}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Tile Overlap" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding TileOverlap}" />
                                </StackPanel>
                            </UniformGrid>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <CheckBox Content="Invert Output" IsChecked="{Binding InvertOutput}" />
                                <CheckBox Content="Merge Output" IsChecked="{Binding MergeOutput}" Margin="20,0,0,0"/>
                            </StackPanel>

                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>


            <!--GridSplitter-->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20" />


            <!--***Middle Panel***-->
            <Grid Grid.Column="2" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="0" />
                </Grid.ColumnDefinitions>


                <!--Content-->
                <Grid Grid.Column="0" >
                    <Border Margin="4">
                        <Grid Margin="20" >
                            <CommonControls:ImageElement 
                                SplitterVisibility="Auto"
                                SplitterPosition="Source"
                                SplitterDirection="LeftToRight"
                                Progress="{Binding Progress}"
                                Source="{Binding ResultImage}" 
                                OverlaySource="{Binding CompareImage}" 
                                IsLoadEnabled="False" 
                                IsLoadOverlayEnabled="False"/>
                        </Grid>
                    </Border>
                </Grid>


                <!--GridSplitter-->
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20"/>


                <!--***Right Panel***-->
                <Grid Grid.Column="2" >
                    <Border Margin="4">
                        <!--Debug Panel-->
                        <StackPanel DockPanel.Dock="Bottom" Margin="4">
                            <TextBlock Text="{Binding SelectedDevice.Type, StringFormat={}Device: {0}}" />
                            <TextBlock Text="{Binding SelectedDevice.DeviceId, StringFormat={}DeviceId: {0}}" />
                            <TextBlock Text="{Binding SelectedModel.Name, StringFormat={}Model: {0}}" />
                            <TextBlock Text="{Binding ExtractorService.IsLoaded, StringFormat={}IsLoaded: {0}}" />
                            <TextBlock Text="{Binding ExtractorService.IsLoading, StringFormat={}IsLoading: {0}}" />
                            <TextBlock Text="{Binding ExtractorService.IsExecuting, StringFormat={}IsExecuting: {0}}" />
                            <TextBlock Text="{Binding ExtractorService.CanCancel, StringFormat={}CanCancel: {0}}" />
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Views:ViewBase>
