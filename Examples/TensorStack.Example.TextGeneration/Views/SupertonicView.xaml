<Views:ViewBase x:Class="TensorStack.Example.Views.SupertonicView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TensorStack.Example.Views"
    xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls;assembly=TensorStack.WPF"
    xmlns:Views="clr-namespace:TensorStack.Example.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SupertonicView}}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="360"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>


            <!--***Left Panel***-->
            <Grid Grid.Column="0">
                <Border Margin="4">
                    <DockPanel x:Name="LeftPanelContainer" Margin="4" LastChildFill="False">

                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding TextService.IsLoading, Converter={StaticResource InverseBoolConverter}}">

                            <!--Device Selector-->
                            <StackPanel IsEnabled="{Binding TextService.IsLoaded, Converter={StaticResource InverseBoolConverter}}">
                                <TextBlock Text="Device" Style="{StaticResource FieldTextBlockStyle}" />
                                <ComboBox ItemsSource="{Binding Settings.Devices}" SelectedItem="{Binding SelectedDevice}" DisplayMemberPath="Name"/>
                            </StackPanel>

                            <!--Model Selector-->
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" IsEnabled="{Binding TextService.IsLoaded, Converter={StaticResource InverseBoolConverter}}">
                                    <TextBlock Text="Models" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox SelectedItem="{Binding SelectedModel, Mode=TwoWay}" ItemsSource="{Binding Settings.TextToAudioModels}" DisplayMemberPath="Name" />
                                </StackPanel>
                                <Grid Grid.Column="1" Height="22" Margin="0,18,0,0" >
                                    <Button x:Name="ButtonLoad" Content="Load" Command="{Binding LoadCommand}" />
                                    <Button x:Name="ButtonUnload" Content="Unload" Command="{Binding UnloadCommand}" Visibility="{Binding TextService.IsLoaded, Converter={StaticResource BooleanToHiddenConverter}}" />
                                </Grid>
                            </Grid>

                        </StackPanel>


                        <!--Options-->
                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding TextService.IsLoaded}">
                            <UniformGrid Columns="2" Margin="0,4,0,0" >
                                <StackPanel>
                                    <TextBlock Text="Voice Style" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox ItemsSource="{Binding Voices}" SelectedItem="{Binding SelectedVoice}" />
                                </StackPanel>
                                <StackPanel >
                                    <TextBlock Text="Seed" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Seed, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </UniformGrid>
                            <StackPanel Margin="0,4,0,0" >
                                <CommonControls:SliderControl Value="{Binding Steps}" Text="Steps" Minimum="1" Maximum="100" TickFrequency="1" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" >
                                <CommonControls:SliderControl Value="{Binding Speed}" Text="Speed" Minimum="0.5" Maximum="5" TickFrequency="0.01" ValuePostFix="x" ValueFormat="N1"/>
                            </StackPanel>
                        </StackPanel>


                        <!--Execute/Cancel-->
                        <UniformGrid DockPanel.Dock="Bottom" Columns="2" Height="30">
                            <Button Content="Cancel" Command="{Binding CancelCommand}" />
                            <Button Content="Execute" Command="{Binding ExecuteCommand}" />
                        </UniformGrid>

                    </DockPanel>
                </Border>
            </Grid>


            <!--GridSplitter-->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20" />


            <!--***Middle Panel***-->
            <Grid Grid.Column="2" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="0" />
                </Grid.ColumnDefinitions>


                <!--Content-->
                <Grid Grid.Column="0" >
                    <Border Margin="4">
                        <DockPanel>
                            <CommonControls:ProgressElement  DockPanel.Dock="Bottom" Progress="{Binding Progress}" Margin="0,2,0,0"/>

                            <Grid  DockPanel.Dock="Bottom" >
                     
                                <DockPanel Margin="0,3,0,0" >

                                    <StackPanel DockPanel.Dock="Top">
                                        <TextBlock Text="Audio Result" Style="{StaticResource FieldTextBlockStyle}" />
                                        <CommonControls:AudioElement Source="{Binding AudioResult, Mode=TwoWay}" Configuration="{Binding Settings}" IsLoadEnabled="False" IsReplayEnabled="False" />
                                    </StackPanel>

                                    <DockPanel Margin="0,10,0,0">
                                        <TextBlock DockPanel.Dock="Top" Text="Text Input" Style="{StaticResource FieldTextBlockStyle}" />
                                        <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" AcceptsReturn="True" BorderThickness="0" />
                                    </DockPanel>

                                </DockPanel>
                            </Grid>


                        </DockPanel>
                    </Border>
                </Grid>


                <!--GridSplitter-->
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20"/>


                <!--***Right Panel***-->
                <Grid Grid.Column="2" >
                    <Border Margin="4">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedDevice.Type, StringFormat={}Device: {0}}" />
                            <TextBlock Text="{Binding SelectedDevice.DeviceId, StringFormat={}DeviceId: {0}}" />
                            <TextBlock Text="{Binding SelectedModel.Name, StringFormat={}Model: {0}}" />
                            <TextBlock Text="{Binding TextService.IsLoaded, StringFormat={}IsLoaded: {0}}" />
                            <TextBlock Text="{Binding TextService.IsLoading, StringFormat={}IsLoading: {0}}" />
                            <TextBlock Text="{Binding TextService.IsExecuting, StringFormat={}IsExecuting: {0}}" />
                            <TextBlock Text="{Binding TextService.CanCancel, StringFormat={}CanCancel: {0}}" />
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Views:ViewBase>
