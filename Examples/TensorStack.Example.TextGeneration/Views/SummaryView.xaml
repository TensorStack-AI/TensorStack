<Views:ViewBase x:Class="TensorStack.Example.Views.SummaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TensorStack.Example.Views"
    xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls;assembly=TensorStack.WPF"
    xmlns:Views="clr-namespace:TensorStack.Example.Views"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SummaryView}}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="360"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>


            <!--***Left Panel***-->
            <Grid Grid.Column="0">
                <Border Margin="4">
                    <DockPanel x:Name="LeftPanelContainer" Margin="4" LastChildFill="False">

                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding TextService.IsLoading, Converter={StaticResource InverseBoolConverter}}">

                            <!--Device Selector-->
                            <StackPanel IsEnabled="{Binding TextService.IsLoaded, Converter={StaticResource InverseBoolConverter}}">
                                <TextBlock Text="Device" Style="{StaticResource FieldTextBlockStyle}" />
                                <ComboBox ItemsSource="{Binding Settings.Devices}" SelectedItem="{Binding SelectedDevice}" DisplayMemberPath="Name"/>
                            </StackPanel>

                            <!--Model Selector-->
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" IsEnabled="{Binding TextService.IsLoaded, Converter={StaticResource InverseBoolConverter}}">
                                    <TextBlock Text="Models" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox SelectedItem="{Binding SelectedModel, Mode=TwoWay}" ItemsSource="{Binding Settings.TextToTextModels}"  DisplayMemberPath="Name" />
                                </StackPanel>
                                <Grid Grid.Column="1" Height="22" Margin="0,18,0,0" >
                                    <Button x:Name="ButtonLoad" Content="Load" Command="{Binding LoadCommand}" />
                                    <Button x:Name="ButtonUnload" Content="Unload" Command="{Binding UnloadCommand}" Visibility="{Binding TextService.IsLoaded, Converter={StaticResource BooleanToHiddenConverter}}" />
                                </Grid>
                            </Grid>

                        </StackPanel>

                        <!--Advanced-->
                        <StackPanel DockPanel.Dock="Top" IsEnabled="{Binding TextService.IsLoaded}">
                            <StackPanel Margin="0,4,0,0" Visibility="{Binding Prefixes, Converter={StaticResource EmptyToVisibilityConverter}}">
                                <TextBlock Text="Summary Task" Style="{StaticResource FieldTextBlockStyle}" />
                                <ComboBox ItemsSource="{Binding Prefixes}" SelectedItem="{Binding SelectedPrefix}" />
                            </StackPanel>
                            <UniformGrid Columns="4" Margin="0,4,0,0">
                                <StackPanel>
                                    <TextBlock Text="Min Length" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding MinLength}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Max Length" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding MaxLength}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Beams" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Beams}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Seed" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Seed}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="TopK" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding TopK}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="TopP" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding TopP}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Temperature" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding Temperature}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="LengthPenalty" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding LengthPenalty}" />
                                </StackPanel>
                                <!--<StackPanel>
                                    <TextBlock Text="DiversityLength" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding DiversityLength}" />
                                </StackPanel>-->
                            </UniformGrid>

                            <UniformGrid Columns="2"  Margin="0,4,0,0">
                                <StackPanel>
                                    <TextBlock Text="Early Stopping" Style="{StaticResource FieldTextBlockStyle}" />
                                    <ComboBox ItemsSource="{Binding Source={StaticResource EarlyStopping}}" SelectedItem="{Binding EarlyStopping}" />
                                </StackPanel>
                                <CheckBox Content="Show All Beams" IsChecked="{Binding IsMultipleResult}" Margin="0,21,0,0" HorizontalAlignment="Right"/>
                            </UniformGrid>

                        </StackPanel>


                        <!--Execute/Cancel-->
                        <UniformGrid DockPanel.Dock="Bottom" Columns="2" Height="30">
                            <Button Content="Cancel" Command="{Binding CancelCommand}" />
                            <Button Content="Summarize" Command="{Binding ExecuteCommand}" />
                        </UniformGrid>

                    </DockPanel>
                </Border>
            </Grid>


            <!--GridSplitter-->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20" />


            <!--***Middle Panel***-->
            <Grid Grid.Column="2" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="0" />
                </Grid.ColumnDefinitions>


                <!--Content-->
                <Grid Grid.Column="0" >
                    <Border Margin="4">
                        <DockPanel>
                            <CommonControls:ProgressElement  DockPanel.Dock="Bottom" Progress="{Binding Progress}" Margin="0,2,0,0"/>

                            <Grid  DockPanel.Dock="Bottom" Margin="0,8,0,0"  Height="240">
                                <TabControl ItemsSource="{Binding SummaryResults}" SelectedIndex="{Binding SelectedBeam}" Visibility="{Binding IsMultipleResult, Converter={StaticResource BooleanToHiddenConverter}}">
                                    <TabControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Header}" MinWidth="100"/>
                                                <TextBlock Text="{Binding Score, StringFormat={}Score: {0:F4}}" FontSize="8" FontStyle="Italic" Opacity=".6" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </TabControl.ItemTemplate>
                                    <TabControl.ContentTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Content}" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" Margin="0,3,0,0"/>
                                        </DataTemplate>
                                    </TabControl.ContentTemplate>
                                </TabControl>

                                <DockPanel Margin="0,3,0,0" Visibility="{Binding IsMultipleResult, Converter={StaticResource InverseBooleanToHiddenConverter}}">
                                    <TextBlock DockPanel.Dock="Top" Text="Summary Result" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding SummaryResults[0].Content}" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" />
                                </DockPanel>
                            </Grid>

                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Summary Input" Style="{StaticResource FieldTextBlockStyle}" />
                                <TextBox Text="{Binding PromptText, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"  AcceptsReturn="True"/>
                            </DockPanel>
                        </DockPanel>
                    </Border>
                </Grid>


                <!--GridSplitter-->
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20"/>


                <!--***Right Panel***-->
                <Grid Grid.Column="2" >
                    <Border Margin="4">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedDevice.Type, StringFormat={}Device: {0}}" />
                            <TextBlock Text="{Binding SelectedDevice.DeviceId, StringFormat={}DeviceId: {0}}" />
                            <TextBlock Text="{Binding SelectedModel.Name, StringFormat={}Model: {0}}" />
                            <TextBlock Text="{Binding TextService.IsLoaded, StringFormat={}IsLoaded: {0}}" />
                            <TextBlock Text="{Binding TextService.IsLoading, StringFormat={}IsLoading: {0}}" />
                            <TextBlock Text="{Binding TextService.IsExecuting, StringFormat={}IsExecuting: {0}}" />
                            <TextBlock Text="{Binding TextService.CanCancel, StringFormat={}CanCancel: {0}}" />
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Views:ViewBase>
