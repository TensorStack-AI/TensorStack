<controls:BaseControl x:Class="TensorStack.WPF.Controls.FontAwesome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:TensorStack.WPF.Controls"
             x:Name="UI">
    <controls:BaseControl.Resources>
        <Storyboard x:Key="SpinAnimation" >
            <DoubleAnimation Storyboard.TargetName="SpinTarget" Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)" To="360" Duration="0:0:1" RepeatBehavior="Forever" />
        </Storyboard>
    </controls:BaseControl.Resources>
    <Grid DataContext="{Binding ElementName=UI}" x:Name="SpinTarget" RenderTransformOrigin="0.5,0.5">
        <TextBlock Text="{Binding IconUnicode}" FontSize="{Binding Size}" Foreground="{Binding Color}" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Style.Triggers>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="Regular">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeRegular}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="Light">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeLight}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="Solid">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSolid}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="Thin">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeThin}" />
                        </DataTrigger>

                        <DataTrigger  Binding="{Binding IconStyle}" Value="Brands">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeBrands}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="Duotone">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeDuotone}" />
                        </DataTrigger>

                        <DataTrigger  Binding="{Binding IconStyle}" Value="SharpRegular">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSharpRegular}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="SharpLight">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSharpLight}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="SharpSolid">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSharpSolid}" />
                        </DataTrigger>
                        <DataTrigger  Binding="{Binding IconStyle}" Value="SharpThin">
                            <Setter Property="FontFamily" Value="{StaticResource FontAwesomeSharpThin}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Grid.RenderTransform>
            <RotateTransform Angle="0"  />
        </Grid.RenderTransform>
    </Grid>
</controls:BaseControl>
