<CommonControls:BaseControl x:Class="TensorStack.WPF.Controls.TransparentImageElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:TensorStack.WPF.Controls"
             xmlns:Behaviors="clr-namespace:TensorStack.WPF.Behaviors"
             xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls"
             xmlns:CommonConverters="clr-namespace:TensorStack.WPF.Converters"
             x:Name="SliderControlUI">
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:TransparentImageElement}}}" >
        <Rectangle 
            Width="{Binding ActualWidth, ElementName=ImageControl}"
            Height="{Binding ActualHeight, ElementName=ImageControl}"
            Fill="{StaticResource CheckerBrush}" Visibility="{Binding Source, Converter={StaticResource NullVisibilityConverter}}" />
        <Image x:Name="ImageControl" Source="{Binding Source}" Stretch="{Binding Stretch}" />
    </Grid>
</CommonControls:BaseControl>
